<h1>Welcome <%= @player.name.capitalize %></h1>
<table border="2" cellpadding="10" cellspacing="5">
  <% @board.grid.values.each_slice(2).map do |row| %>
    <tr>
      <% row.each do |content| %>
          <td><%= content.content.class == Ship ? "Ship" : "Water" %></td>
        <%end%>
    </tr>
  <%end%>
</table>



<form action='/shoot' method='post'>
   <input type="text" name="shot">
   <br>
  <input type="submit" value="Submit">
</form>


